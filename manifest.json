{

  "description": "Zbiór rozszerzeń usprawniających przeglądanie portalu Wykop.pl",
  "manifest_version": 2,
  "name": "WykopPlExtensions",
  "version": "1.0",
  "icons": {
    "96": "icons/favicon-96x96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wykop.pl/*"],
      "js": ["hide-articles.js"]
    }
  ],

  "permissions": [
    "storage"
  ]
}
