{

  "description": "Zbiór rozszerzeń usprawniających przeglądanie portalu Wykop.pl",
  "manifest_version": 2,
  "name": "WykopPlExtensions",
  "version": "1.1",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/borderify",
  "icons": {
    "96": "icons/favicon-96x96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.wykop.pl/*"],
      "js": ["content_scripts/hide-articles.js"]
    }
  ],

  "permissions": [
    "storage"
  ]
}
